<%- include('include/_header') %>


<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex-justify-betweem" >
            <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i>Home page</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Details</h2>
            <span class="text-light">Use the below form to  update a Book Details</span>
        </div>


       
        <form method="POST" id="update_user">
            <div class="new_user">
                <div class="form-group">
                    <label for="book" class="text-light">book title</label>
                    <input type="hidden" name="id" value="<%=user._id%>">
                    <input type="text" name="book" value="<%= user.book %>" placeholder="Mark Stoenis">
                </div>
                <div class="form-group">
                    <label for="author" class="text-light">author name</label>
                    <input type="text" name="author" value="<%= user.author %>" placeholder="example@gmail.com">
                </div>
                <div class="form-group">
                    <label for="edition" class="text-light">edition</label>
                    <input type="text" name="edition" value="<%= user.edition %>" placeholder="example@gmail.com">
                </div>
        
                <div class="form-group">
                    <label for="subject" class="text-light">subject</label>
                    <input type="text" name="subject" value="<%= user.subject %>" placeholder="example@gmail.com">
                </div>

                <div class="form-group">
                    <label for="Status" class="text-light">No. of Copies</label>
                    <input type="text" name="Status" value="<%= user.Status %>" placeholder="example@gmail.com">
                </div>
        
                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Save</button>
                </div>
        
            </div>
        </form>




    
    </div>
</main>


<%- include('include/_footer') %>